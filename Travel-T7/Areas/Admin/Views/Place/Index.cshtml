@model PagedList<Travel_T7.Models.EF.Place>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Địa điểm du lịch";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Place" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách địa điểm du lịch</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/Admin/Place/Add" class="btn btn-primary">Them moi</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xoa</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên địa điểm</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Giá khuyến mãi</th>
                        <th>Ảnh địa điểm</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.page - 1) * ViewBag.pageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">

                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>@item.PriceSale</td>
                                <td><img src="@item.Image" style="object-fit:cover" width="50px;" height="auto;"/></td>
                                <td>
                                    <a href="~/Admin/Place/Edit/@item.Id" class="btn btn-sm btn-primary" >Sửa</a>
                                    <a data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Khong co danh muc nao !</td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
@section scripts{
       <script>
           $('body').on('click', '.btnDelete', function () {
               var id = $(this).data('id');
               var conf = confirm('ban co muon xoa khong');
               if (conf === true) {
                   $.ajax({
                       url: '/Admin/Place/Delete',
                       type: 'POST',
                       data: { id: id },
                       success: function (rs) {
                           if (rs.success) {
                               $('trow_' + id).remove();
                               location.reload();
                           }
                       }
                   });
               }
           });
       </script>
    }
