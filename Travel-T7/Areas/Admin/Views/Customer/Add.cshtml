@model Travel_T7.Models.EF.KhachHang
@{
    ViewBag.Title = "Thêm mới thông tin khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Customer" class="nav-link">Thông tin khách hàng</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin khách hàng</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Customer", FormMethod.Post))
                {
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên</label>
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "FristName" })
                            @*@Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })*@
                        </div>
                        <div class="form-group">
                            <label for="exampleInput">Họ</label>
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "LastName" })
                            @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInput">Số điện thoại</label>
                            @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", @placeholder = "Số điện thoại" })
                            @Html.ValidationMessageFor(x => x.Telephone, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Địa chỉ email" })
                            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Số lượng người đi</label>
                            @Html.TextBoxFor(x => x.Number, new { @class = "form-control", @placeholder = "Số luongj người đi" })
                            @Html.ValidationMessageFor(x => x.Number, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Địa điểm đến</label>
                            @Html.TextBoxFor(x => x.Destination, new { @class = "form-control", @placeholder = "Điểm đến" })
                            @Html.ValidationMessageFor(x => x.Destination, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a href="/Admin/Customer" class="btn btn-danger">Quay lai</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
    <!-- /.card-footer-->
    <!-- /.card -->
</section>
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/Content/ckeditor/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
}